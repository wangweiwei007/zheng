<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">

    <dubbo:application name="zheng-shop-rpc-service"/>

    <dubbo:registry address="zookeeper://zkserver:2181"/>

    <dubbo:protocol name="dubbo" port="20884"/>

    <!--<dubbo:monitor protocol="registry"/>-->

    <!-- 品牌 -->
    <bean id="shopBrandService" class="com.zheng.shop.rpc.service.impl.ShopBrandServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopBrandService" ref="shopBrandService" timeout="10000"/>

    <!-- 客户 -->
    <bean id="shopBuyerService" class="com.zheng.shop.rpc.service.impl.ShopBuyerServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopBuyerService" ref="shopBuyerService" timeout="10000"/>

    <!-- 颜色 -->
    <bean id="shopColorService" class="com.zheng.shop.rpc.service.impl.ShopColorServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopColorService" ref="shopColorService" timeout="10000"/>

    <!-- 订单详情 -->
    <bean id="shopDetailService" class="com.zheng.shop.rpc.service.impl.ShopDetailServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopDetailService" ref="shopDetailService" timeout="10000"/>

    <!-- 订单 -->
    <bean id="shopOrderService" class="com.zheng.shop.rpc.service.impl.ShopOrderServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopOrderService" ref="shopOrderService" timeout="10000"/>

    <!-- 产品 -->
    <bean id="shopProductService" class="com.zheng.shop.rpc.service.impl.ShopProductServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopProductService" ref="shopProductService" timeout="10000"/>

    <!-- 库存 -->
    <bean id="shopSkuService" class="com.zheng.shop.rpc.service.impl.ShopSkuServiceImpl"/>
    <dubbo:service interface="com.zheng.shop.rpc.api.ShopSkuService" ref="shopSkuService" timeout="10000"/>

</beans>